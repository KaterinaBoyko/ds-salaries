from sklearn.cluster import KMeans
import numpy as np
import matplotlib.pyplot as plt

# Для кластеризации используем только признак заработной платы в долларах
X_salary = data_cleaned[['salary_in_usd']]

# Найдем оптимальное количество кластеров с использованием метода "локтя"
wcss = []  # within-cluster sum of squares (внутрикластерная сумма квадратов)
for i in range(1, 11):
    kmeans = KMeans(n_clusters=i, random_state=42)
    kmeans.fit(X_salary)
    wcss.append(kmeans.inertia_)

# Визуализируем метод локтя
plt.figure(figsize=(8, 6))
plt.plot(range(1, 11), wcss, marker='o', linestyle='--')
plt.title('Метод локтя для определения оптимального количества кластеров')
plt.xlabel('Количество кластеров')
plt.ylabel('WCSS')
plt.show()


